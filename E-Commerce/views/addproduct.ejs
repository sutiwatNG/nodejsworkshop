<!DOCTYPE html>
<html>
  <head>
    <title></title>
    
  </head>
  <body>
    <%- include layout %>
<!-- Page Content -->
<div class="container">

  <div class="row">
    
    <!-- /.col-lg-3 -->
    <div class="col-lg-12 my-4">
        <h2 align="center">แบบฟอร์มบันทึกสินค้า</h2>
        <% if(locals.errors) { %>
              <ul class="alert alert-danger" role="alert">
                  <% Object.values(errors).forEach(function(error){ %>
                        <li><%= error.msg %></li>
                  <% }) %>
              </ul>
        <% } %>
        <form class="" action="/products/add" method="post">
            <div class="form-group">
              <label for="">ชื่อสินค้า</label>
              <input type="text" name="name" value="" class="form-control">
            </div>
            <div class="form-group">
                <label for="">รายละเอียด :</label>
                <textarea name="description" id="" cols="30" rows="10" class="form-control"></textarea>
              </div>
              <div class="form-group">
                <label for="">ภาพสินค้า :</label>
                <input type="text" name="img" value="" class="form-control">
              </div>
              <div class="form-group">
                <label for="">ราคา :</label>
                <input type="number" name="price" value="" min=1 class="form-control">
              </div>
              <div class="form-group">
                <label for="">ประเภทสินค้า :</label>
                <select class="form-control" name="category" id="">
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category.name %>"><%= category.name %></option>
                    <% }) %>
                </select>
              </div>
            <input type="submit"  value="บันทึกข้อมูล" class="btn btn-success">
          </form>
      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

</div>
<!-- /.container -->



  
  </body>
</html>
