<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <%- include ../layout %>
    <div class="container">
      <h2 align="center">Hello : <%= student.fname %></h2>
      <br>
      <h5>My Class</h5>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ClassID</th>
            <th scope="col">ClassName</th>
            <th scope="col">View Lesson</th>
          </tr>
        </thead>
        <tbody>
          <% if (student.classes) { %>
            <% for (var result of student.classes){%>
            <tr>
              <td ><%= result.class_id %></td>
              <td> <%= result.class_title %></td>
              <td><a href="/classes/<%= result.class_id %>/lesson" class="btn btn-success">View Lesson</a></td>
            </tr>
            <%} %>
         <% } %>
        </tbody>
      </table>
      
    </div>
  </body>
</html>