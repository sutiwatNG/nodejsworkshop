<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    
    <%- include ../layout %>
    <div class="container">
    <h2 align="center">ลงทะเบียนเรียน</h2>
    <% if(locals.errors) {%>
      <ul class="alert alert-danger">
      <% Object.values(errors).forEach(function(error){%>
            <li><%= error.msg %></li>
        <%}) %>
      </ul>
    <% } %>
    <form class="form-group" action="/users/register" method="post">
      <div class="form-group">
          <label for="">Student/Instructor :</label>
          <select name="type" class="form-control">
            <option value="student">Student</option>
            <option value="instructor">Instructor</option>
          </select>
      </div>
      <div class="form-group">
        <label for="">Firstname :</label>
        <input type="fname" name="fname" value="" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Lastname :</label>
        <input type="lname" name="lname" value="" class="form-control">
    </div>
      <div class="form-group">
        <label for="">Username :</label>
        <input type="name" name="username" value="" class="form-control">
    </div>
      <div class="form-group">
          <label for="">Password :</label>
          <input type="password" name="password" value="" class="form-control">
      </div>
      <div class="form-group">
          <label for="">Email :</label>
          <input type="email" name="email" value="" class="form-control">
      </div>
      <input type="submit" name="" value="ลงทะเบียน" class="btn btn-primary">
    </form>
  </div>
  </body>
</html>