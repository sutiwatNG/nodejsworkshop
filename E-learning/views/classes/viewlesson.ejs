<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <%- include ../layout %>
    <div class="container">
      <h2 align="center">Class: <%= className.title %></h2>
      <br>
      <h5>My Lesson</h5>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">LessonID</th>
            <th scope="col">LessonName</th>
            <th scope="col">View Lesson</th>
          </tr>
        </thead>
        <tbody>
          <% if (className.lesson) { %>
            <% for (var result of className.lesson){%>
            <tr>
              <td ><%= result.lesson_number %></td>
              <td> <%= result.lesson_title %></td>
              <td><a href="/classes/<%=className.class_id %>/lesson/<%=result.lesson_number %>" class="btn btn-primary">View </a></td>
            </tr>
            <%} %>
         <% } %>
        </tbody>
      </table>

    </div>
  </body>
</html>